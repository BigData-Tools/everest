<configure
    xmlns="http://namespaces.repoze.org/bfg"
>

    <!-- Include special directives. -->
    <include
        package="repoze.bfg.includes" />

    <include
        package="everest.includes" />

    <!-- Representer classes. -->
    <utility
        component="everest.representers.xml.XmlResourceRepresenter"
        provides="everest.representers.interfaces.IRepresenter"
        name="application/xml" />

    <utility
        component="everest.representers.csv.CsvResourceRepresenter"
        provides="everest.representers.interfaces.IRepresenter"
        name="application/csv" />

    <!-- Resource declarations. -->

    <resource
        interface='.interfaces.IFoo'
        collection=".resources.FooCollection"
        aggregate=".entities.FooEntityAggregate"
        member=".resources.FooMember"
        entity=".entities.FooEntity"/>

    <resource
        interface='.interfaces.IBar'
        collection=".resources.BarCollection"
        aggregate=".entities.BarEntityAggregate"
        member=".resources.BarMember"
        entity=".entities.BarEntity"/>

    <representer
        for=".resources.FooMember"
        content_type="everest.mime.XmlMime"
        configuration=".representer_config.XML_MYRESOURCE" />

    <representer
        for=".resources.FooMember"
        content_type="everest.mime.CsvMime" />

</configure>